<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:id="@+id/title_textInputLayout_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        android:hint="Label name"
        app:startIconDrawable="@drawable/ic_label">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/material_on_primary_emphasis_high_type"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/title_editText_label"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/difficulty_textView_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text='@{"Difficulty: " + viewModel.labelDifficulty.toString()}'
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                tools:text="Difficulty: 12" />

            <SeekBar
                android:id="@+id/diffuculty_seekBar_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="15"
                android:padding="16dp"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>