<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.jonikoone.dictionaryforlearning.viewmodels.labels.LabelViewModel" />
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#fff"
            android:elevation="8dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:setNavigationOnClickListener="@{viewModel.navigationBack}"
                app:title="Change label" />

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_anchor="@+id/nestedScrollView2"
            app:layout_anchorGravity="center"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="Label name"
                    app:setOnClickStartIcon="@{viewModel.onClickStartIcon}"
                    app:setTintColorStartIcon="@{viewModel.labelColor}"
                    app:startIconDrawable="@drawable/ic_label">

                    <com.google.android.material.textfield.TextInputEditText
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/material_on_primary_emphasis_high_type"
                        android:text="@={viewModel.labelTitle}"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                </com.google.android.material.textfield.TextInputLayout>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:elevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text='@{"Difficulty: " + viewModel.labelDifficulty.toString()}'
                            tools:text="Difficulty: 12"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                        <SeekBar
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="15"
                            android:progress="@={viewModel.labelDifficulty}"
                            />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <!--<com.jonikoone.dictionaryforlearning.views.ColorPickerView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:clipChildren="false"
                    android:layerType="software"
                    app:init_color="#ff123456" />-->

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheet_card_bg"
            android:elevation="16dp"
            app:behavior_hideable="true"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:addBottomCallback="@{viewModel.bottomSheetCallback}"
            app:setState="@{viewModel.stateBottomSheet}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <ImageButton
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="#00000000"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> viewModel.cancelChangeColor()}"
                        android:src="@drawable/ic_close" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="56dp"
                        android:layout_marginEnd="56dp"
                        android:ellipsize="end"
                        android:gravity="center|start"
                        android:text="Choose color for your label"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Button" />

                    <ImageButton
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="end"
                        android:background="#00000000"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> viewModel.applyChangeColor()}"
                        android:src="@drawable/ic_apply"
                        android:tint="@color/colorPrimaryDark" />

                </FrameLayout>

                <com.jonikoone.dictionaryforlearning.views.ColorPickerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:layerType="software"
                    app:init_color="#ff123456"
                    app:setColorManyChangeListener="@{viewModel.colorListnerForStartIcon}" />

            </LinearLayout>

        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
