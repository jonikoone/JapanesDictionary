<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemViewModel"
            type="com.jonikoone.dictionaryforlearning.viewmodels.labels.LabelViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> itemViewModel.openLabelScreen()}"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/ic_label"
                android:tint="@{itemViewModel.labelColor}" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="@{itemViewModel.labelDifficulty.toString()}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                tools:text="255" />
        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="1"
            android:text="@{itemViewModel.labelTitle}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            tools:text="TextView" />


    </LinearLayout>


</layout>
