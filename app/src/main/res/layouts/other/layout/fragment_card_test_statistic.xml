<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txt_dateTesting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Date test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_rateFailed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Failed rate"

        app:layout_constraintEnd_toEndOf="@+id/txt_dateTesting"
        app:layout_constraintStart_toStartOf="@+id/txt_dateTesting"
        app:layout_constraintTop_toBottomOf="@+id/txt_dateTesting" />



</androidx.constraintlayout.widget.ConstraintLayout>